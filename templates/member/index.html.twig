{% extends 'base.html.twig' %}

{% block title %}Members{% endblock %}

{% block body %}
<h1>Members</h1>

<table class="table">
    <thead>
        <tr>
            <th>Email</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {% for member in members %}
        <tr>
            <td>{{ member.email }}</td>
            <td>
                <a href="{{ path('app_member_show', {'id': member.id}) }}">View</a>
            </td>
        </tr>
        {% endfor %}
    </tbody>
</table>
{% endblock %}
