{% extends 'base.html.twig' %}

{% block title %}{{ model.name }} - Model{% endblock %}

{% block body %}
    <h1>{{ model.name }}</h1>

    <img src="/{{ model.imagePath }}" alt="{{ model.name }}" style="max-width: 400px; height: auto; margin-bottom: 20px;">

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ model.id }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ model.description }}</td>
            </tr>
        </tbody>
    </table>

    <h2>PyTorch Code</h2>
    <pre style="background: #f5f5f5; padding: 15px; border-radius: 5px;"><code>{{ model.pytorchCode }}</code></pre>

    <a href="{{ path('app_vault_show', {'id': model.vault.id}) }}">back to vault</a> |
    <a href="{{ path('app_model_edit', {'id': model.id}) }}">edit</a>

    {{ include('model/_delete_form.html.twig') }}
{% endblock %}