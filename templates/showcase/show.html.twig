{% extends 'base.html.twig' %}

{% block title %}Showcase{% endblock %}

{% block body %}
    <h1>Showcase</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ showcase.id }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ showcase.description }}</td>
            </tr>
            <tr>
                <th>Published</th>
                <td>{{ showcase.published ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Models</th>
                <td>
                    <ul>
                        {% for model in showcase.models %}
                        <li>
                            <a href="{{ path(
                                'app_showcase_model_show', {
                                    'showcase_id': showcase.id,
                                    'model_id' : model.id
                                }
                            ) }}">{{ model.name }}</a>
                        </li>
                        {% endfor %}
                    </ul>
                </td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_member_show', {'id': showcase.member.id}) }}">back to member</a>

    <a href="{{ path('app_showcase_edit', {'id': showcase.id}) }}">edit</a>

    {{ include('showcase/_delete_form.html.twig') }}
{% endblock %}
