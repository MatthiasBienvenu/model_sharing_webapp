{% extends 'base.html.twig' %}

{% block title %}Vault index{% endblock %}

{% block body %}
    <h1>Vault index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for vault in vaults %}
            <tr>
                <td>{{ vault.id }}</td>
                <td>
                    <a href="{{ path('app_vault_show', {'id': vault.id}) }}">show</a>
                    <a href="{{ path('app_vault_edit', {'id': vault.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="2">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_vault_new') }}">Create new</a>
{% endblock %}
